    android:name="com.example.bestobislasfiji.obligatorioandroid.ListadoPedidosPendEntFrag"
    tools:layout="@layout/frag_pedidos_pend_entrega" />

        <fragment
            android:id="@+id/frgDetallePedidosAEntregar"
