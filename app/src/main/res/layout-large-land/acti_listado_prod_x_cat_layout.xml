    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bestobislasfiji.obligatorioandroid.ListadoProductosXCategoriaAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <fragment
            android:id="@+id/frgListadoProdXCat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
         android:layout_weight="30"
            android:name="com.example.bestobislasfiji.obligatorioandroid.ListadoProductosXCategoriaFrag"
            tools:layout="@layout/frag_listado_prod_x_cat_layout" />

        <fragment
            android:id="@+id/frgDetalleProducto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:name="com.example.bestobislasfiji.obligatorioandroid.DetalleProductoFragment"
            tools:layout="@layout/frag_detalle_producto" />


    </LinearLayout>

</RelativeLayout>
